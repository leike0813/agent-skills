{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "姓名"
            },
            "title": {
                "type": "string",
                "description": "称谓 (必填)",
                "minLength": 1
            },
            "relation": {
                "type": "string",
                "description": "关系 (必填)",
                "minLength": 1
            },
            "age": {
                "type": [
                    "integer",
                    "string"
                ],
                "description": "年龄"
            },
            "gender": {
                "type": "string",
                "enum": [
                    "男",
                    "女",
                    "Male",
                    "Female",
                    "Other"
                ],
                "description": "性别"
            },
            "notes": {
                "type": "string",
                "description": "注意事项"
            }
        },
        "required": [
            "title",
            "relation"
        ],
        "additionalProperties": false
    }
}